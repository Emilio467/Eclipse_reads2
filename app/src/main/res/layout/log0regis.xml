<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#10114B"
    tools:context=".log0regis" >

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="212dp"
        android:layout_height="160dp"
        android:layout_marginStart="89dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="345dp"
        android:layout_height="606dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="53dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <com.google.android.material.card.MaterialCardView
                android:layout_width="261dp"
                android:layout_height="42dp"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="41dp"
                android:backgroundTint="#1F070707">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="134dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#00FFFFFF"
                        android:text="Entrar"

                        android:textColor="#7803FD" />

                    <Button
                        android:id="@+id/button9"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#10070707"
                        android:text="Registrar"
                        android:textColor="#7803FD" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <EditText
                android:id="@+id/editTextTextEmailAddress5"
                android:layout_width="299dp"
                android:layout_height="42dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:background="#29121212"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:text="Email:"
                android:textColor="#6B101010" />

            <EditText
                android:id="@+id/editTextTextEmailAddress6"
                android:layout_width="299dp"
                android:layout_height="42dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="#29121212"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:text="Senha:"
                android:textColor="#6B101010" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:text="CheckBox" />

                <Button
                    android:id="@+id/button37"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"

                    android:background="#00FFFFFF"
                    android:text="Esqueci a senha"
                    android:textColor="#7803FD" />
            </LinearLayout>

            <Button
                android:id="@+id/button38"
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:text="Entrar" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="314dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="80dp"
                android:text="Ao continuar, você concorda com nossos Termos de Uso e Política de Privacidade." />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>